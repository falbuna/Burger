<header class="row" style="background-color: #f7cf3e;">
    <div class="col-12">
        <div class="jumbotron jumbotron-fluid" style="background-color: #f7cf3e">
            <h1>Burger Time!<i class="fas fas-save"></i></h1>
        </div>
    </div>
</header>

<div class="row mt-2 mb-3">

    <div class="col-4 mx-auto">
        <h2>Burgers in the queue:</h2>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burger-block eaten=true}}
            {{/unless}}
        {{/each}}
    </div>


    <div class="col-4 mx-auto">
        <h2>Burgers that were eaten:</h2>
        {{#each burgers}}
            {{#if devoured}}
                {{> burger-block eaten=false}}
            {{/if}}
        {{/each}}
    </div>

</div>

<br>

<form class="create-form">

    <div class="form-group">

        <textarea class="col-4" type="text" id="burger" rows="4" name="name"></textarea>

    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    <p>Enter a burger for the queue in the text area and press Submit.</p>

</form>