<header class="row" style="background-color: #f7cf3e;">
    <div class="col-12 mb-4">
            <h1>Burger Time!</h1>
            <img src="/assets/images/burger.png" width="200" height="200">
    </div>
</header>

<div class="row mt-2 mb-3">

    <div class="col-4 mx-auto">
        <h3>Burgers in the queue:</h3>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burger-block eaten=true}}
            {{/unless}}
        {{/each}}
    </div>


    <div class="col-4 mx-auto">
        <h3>Burgers that were eaten:</h3>
        {{#each burgers}}
            {{#if devoured}}
                {{> burger-block eaten=false}}
            {{/if}}
        {{/each}}
    </div>

</div>

<br>

<form class="create-form">

    <div class="form-group">

        <p>Enter a burger to be added to the queue in the text area and press Submit.</p>
        
        <textarea class="col-4" type="text" id="burger" rows="4" name="name"></textarea>

    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>

</form>