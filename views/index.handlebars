<header class="row" style="background-color: #f7cf3e;">
    <div class="col-12 mb-4">
            <h1>Burger Time!</h1>
            <img src="/assets/images/burger.png" width="200" height="200">
    </div>
</header>

<div class="row mt-2 mb-3">

    {{!-- The left column of the burgers to devour --}}
    <div class="col-4 mx-auto">
        <h3 style="color:orange">Burgers in the queue:</h3>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burger-block eaten=true}}
            {{/unless}}
        {{/each}}
    </div>

    {{!-- The right column of the burgers to reorder. --}}
    <div class="col-4 mx-auto">
        <h3 style="color: red">Burgers that were eaten:</h3>
        {{#each burgers}}
            {{#if devoured}}
                {{> burger-block eaten=false}}
            {{/if}}
        {{/each}}
    </div>

</div>

<br>

<form class="create-form">
{{!-- Input Area to add a burger. --}}
    <div class="form-group">

        <p>Enter a burger to be added to the queue in the text area and press Submit.</p>
        
        <textarea class="col-4" type="text" id="burger" rows="4" name="name"></textarea>

    </div>
    {{!-- Submit button to add a burger. --}}
    <button type="submit" class="btn btn-primary">Submit</button>

</form>