<h1>Burgers!</h1>

<h2>Burgers to be Eaten</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burger-block eaten=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Eaten burgers</h2>
    {{#each burgers}}
        {{#if devoured}}
            {{> burger-block eaten=false}}
        {{/if}}
    {{/each}}

<br>

<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name: </label>
        <input type="text" id="burger" name="name">

        <button type="submit">Add a Burger</button>
    </div>
</form>